+    ret = HWD_Create(&ctx->handle, &ctx->initParams);
+    if (ret != IHW265D_OK) {
+        av_log(avctx, AV_LOG_ERROR, "ERROR: IHW265D_Create fail\n");
+        return AVERROR(EINVAL);   
