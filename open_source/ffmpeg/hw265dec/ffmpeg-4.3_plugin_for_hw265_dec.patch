+
+    ctx->avctx = avctx;
+    ctx->length_size = 0;
+    ctx->extradata_parsed = 0;
+    ctx->buffer_format = av_packet_alloc();
+
+    if (ctx->avctx->extradata_size < MIN_HEVCC_LENGTH ||
